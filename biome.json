{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"javascript": {
		"parser": {
		  "unsafeParameterDecoratorsEnabled": true 
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"useValidTypeof": "off"
			},
			  "complexity": {
				"useSimplifiedLogicExpression": "off"
			},
			  "a11y": {
				"useKeyWithClickEvents": "warn"
			},
			  "security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"ignore": []
	  },
	  "files": {
		"ignore": [
		  "*.js",
		  "*.cjs"
		]
	}
}
